{
  "name": "ng-evergreen",
  "displayName": "Angular Evergreen",
  "version": "0.8.0",
  "publisher": "expertly-simple",
  "license": "ISC",
  "description": "Keep your project's version of Angular and related packages evergreen with periodic update checks and upgrade your Angular CLI projects with ease.",
  "icon": "ng-evergreen-logo.png",
  "keywords": [
    "angular",
    "evergreen",
    "update",
    "ng",
    "ng-cli"
  ],
  "galleryBanner": {
    "color": "#2d7254",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/angular.json"
  ],
  "main": "./dist/extension",
  "contributes": {
    "configuration": {
      "title": "Angular Evergreen",
      "properties": {
        "ng-evergreen.upgradeChannel": {
          "description": "Which version channel (latest or next) of Angular to upgrade to",
          "type": "string",
          "enum": [
            "Latest",
            "Next"
          ]
        },
        "ng-evergreen.checkFrequency": {
          "description": "How often Angular Evergreen should check for available Angular updates",
          "type": "string",
          "enum": [
            "On Load",
            "Hourly",
            "Daily",
            "Weekly",
            "Bi-Weekly"
          ]
        },
        "ng-evergreen.versionToSkip": {
          "description": "Which version of Angular to skip updates for",
          "type": "string"
        }
      }
    },
    "commands": [
      {
        "command": "ng-evergreen.startAngularEvergreen",
        "title": "Start Angular Evergreen",
        "category": "Angular Evergreen"
      },
      {
        "command": "ng-evergreen.stopAngularEvergreen",
        "title": "Stop periodic Angular update checks",
        "category": "Angular Evergreen"
      },
      {
        "command": "ng-evergreen.checkForUpdates",
        "title": "Check for Angular Updates",
        "category": "Angular Evergreen",
        "icon": "/resources/refresh.svg"
      },
      {
        "command": "ng-evergreen.navigateToUpdateIo",
        "title": "Visit update.angular.io",
        "category": "Angular Evergreen Update"
      },
      {
        "command": "ng-evergreen.navigateToBlogIo",
        "title": "Visit blog.angular.io",
        "category": "Angular Evergreen Help"
      },
      {
        "command": "ng-evergreen.updateAngular",
        "title": "Update Angular?",
        "category": "Angular Evergreen Update"
      },
      {
        "command": "ng-evergreen.updateAll",
        "title": "Update All Angular Packages?",
        "category": "Angular Evergreen Update"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "evergreen-container",
          "title": "Angular Evergreen",
          "icon": "resources/ng-evergreen-logo-monochromatic.svg"
        }
      ]
    },
    "views": {
      "evergreen-container": [
        {
          "id": "versions",
          "name": "Current Versions",
          "icon": "resources/ng-evergreen-logo-monochromatic.svg"
        },
        {
          "id": "update",
          "name": "Update Angular",
          "icon": "resources/ng-evergreen-logo-monochromatic.svg"
        },
        {
          "id": "help",
          "name": "Need Help?",
          "icon": "resources/ng-evergreen-logo-monochromatic.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ng-evergreen.checkForUpdates",
          "when": "view == versions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ng-evergreen.navigateToUpdateIo",
          "when": "view == update && viewItem == dependency",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "standardize": "import-sort --write \"{src,tests}/**/*.ts\" && prettier-tslint fix \"{src,tests}/**/*.ts\"",
    "standardize:ci": "import-sort -l \"{src,tests}/**/*.ts\" && prettier-tslint check \"{src,tests}/**/*.ts\"",
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "watch": "webpack --mode none --watch",
    "package": "vsce package",
    "pretest": "tsc -p src/test/tsconfig.test.json",
    "test": "ts-node ./src/test/runTest.ts",
    "test:docker": "docker image build . -t evergreen-test"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/cron": "^1.7.1",
    "@types/execa": "^0.9.0",
    "@types/get-stream": "^3.0.2",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.4",
    "@types/vscode": "^1.34.0",
    "dev-norms": "^1.7.0",
    "glob": "^7.1.4",
    "import-sort": "^6.0.0",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "prettier-tslint": "^0.4.2",
    "source-map-support": "^0.5.16",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.5.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "vsce": "^1.69.0",
    "vscode-test": "^1.2.3",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "execa": "^2.0.3",
    "get-latest-version": "^1.0.1",
    "get-stream": "^5.1.0",
    "open": "^6.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/expertly-simple/angular-evergreen.git"
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module",
      "options": {}
    }
  }
}
